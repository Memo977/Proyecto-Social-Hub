APP_NAME="SocialHub"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=social_hub
DB_USERNAME=root
DB_PASSWORD=

# Cache / Session
# Laravel 11+ usa CACHE_STORE (no CACHE_DRIVER). Para simplicidad se usa database.
CACHE_STORE=database
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Queue (requerido para publicaciones programadas)
QUEUE_CONNECTION=database

# Redis (opcional; si no lo usas, puedes ignorar esta sección)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (usa Mailtrap u otro SMTP en desarrollo)
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="socialhub@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Filesystem
FILESYSTEM_DISK=public

# --- OAuth Providers ---
# Mastodon
# Ejemplo de instancia pública: https://mastodon.social
MASTODON_DOMAIN=
MASTODON_ID=
MASTODON_SECRET=
MASTODON_REDIRECT=${APP_URL}/auth/mastodon/callback

# Reddit
# Crea una app tipo "script" en https://www.reddit.com/prefs/apps
# y configura el redirect EXACTO que se indica abajo.
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_REDIRECT_URI=${APP_URL}/oauth/reddit/callback
# Reddit exige un User-Agent claro e identificable (incluye tu usuario).
REDDIT_USER_AGENT="SocialHub/1.0 (by u/TU_USUARIO_REDDIT)"

# (Reservados para futuros proveedores; déjalos vacíos si no se usan)
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=${APP_URL}/auth/twitter/callback

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
